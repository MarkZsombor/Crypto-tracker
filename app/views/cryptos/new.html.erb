<h1>La New Crypto</h1>
<%= form_with scope: :crypto, url: cryptos_path, local: true do |form| %>

  <% if @crypto.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@crypto.errors.count, "error") %> prohibited
        this crypto from being created:
      </h2>
      <ul>
        <% @crypto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :crypto %><br>
    <%= form.text_field :crypto %>
  </p>

  <p>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', cryptos_path %>